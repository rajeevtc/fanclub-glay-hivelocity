<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/topFragment">

    <fragment
        android:id="@+id/topFragment"
        android:name="co.jp.hivelocity.glay.Fragments.TopFragment"
        android:label="fragment_top"
        tools:layout="@layout/fragment_top" >
        <action
            android:id="@+id/action_topFragment_to_musicListFragment"
            app:destination="@id/musicListFragment" />
        <action
            android:id="@+id/action_topFragment_to_movieListFragment"
            app:destination="@id/movieListFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicListFragment"
        android:name="co.jp.hivelocity.glay.Fragments.MusicListFragment"
        android:label="fragment_music_list"
        tools:layout="@layout/fragment_music_list" >
        <action
            android:id="@+id/action_musicListFragment_to_musicPlayerFragment"
            app:destination="@id/musicPlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieListFragment"
        android:name="co.jp.hivelocity.glay.Fragments.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_moviePlayerFragment"
            app:destination="@id/moviePlayerFragment" />
    </fragment>
    <fragment
        android:id="@+id/moviePlayerFragment"
        android:name="co.jp.hivelocity.glay.Fragments.MoviePlayerFragment"
        android:label="fragment_movie_player"
        tools:layout="@layout/fragment_movie_player" />
    <fragment
        android:id="@+id/musicPlayerFragment"
        android:name="co.jp.hivelocity.glay.Fragments.MusicPlayerFragment"
        android:label="fragment_music_player"
        tools:layout="@layout/fragment_music_player" >
        <argument
            android:name="musicDetails"
            app:argType="co.jp.hivelocity.glay.ViewModels.MusicStreamItemViewModel" />
    </fragment>
</navigation>